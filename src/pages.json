  "tabBar": {
    "color": "#000000",
    "selectedColor": "#07c160",
    "list": [
      {
        "pagePath": "pages/login/index",
        "text": "登录"
      },
      {
        "pagePath": "pages/index/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/patient/info",
