{
  // ==================== Editor ====================
  "editor.fontFamily": "Courier New, Fira Code Retina, Monaco, YaHei Consolas Hybrid,Courier New",
  "editor.fontSize": 12,
  "editor.wordWrap": "on",
  "editor.cursorWidth": 3,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "bold",
  "editor.lineHeight": 25,
  "editor.renderLineHighlight": "all",
  "editor.inlineSuggest.enabled": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  // ==================== workbench ====================
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#f0285ab9", //选中高亮
    "editorCursor.foreground": "#ff5521"
  },
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.view.alwaysShowHeaderActions": true,
  // ==================== Window ====================
  "window.autoDetectColorScheme": true,
  // ==================== Terminal ====================
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 3,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "monospace",
  "git.enableSmartCommit": true,
  "files.trimTrailingWhitespace": true,
  "debug.console.fontSize": 14,
  "git.confirmSync": false,
  // ==================== Custom Plugin Config ====================
  "workbench.colorTheme": "Default Dark+",
  "explorer.confirmDelete": false,
  "git.ignoreLegacyWarning": true,
  "cSpell.userWords": [
    "alicloud",
    "Alisms",
    "antd",
    "bitnami",
    "bson",
    "ccclass",
    "chakra",
    "chil",
    "chils",
    "clsx",
    "cmap",
    "Consolas",
    "cstring",
    "dcasia",
    "dcloudio",
    "Dysmsapi",
    "echarts",
    "Fira",
    "gssapi",
    "iconfont",
    "Iconify",
    "immer",
    "Indendity",
    "localstorage",
    "mbti",
    "napi",
    "navbars",
    "navigatge",
    "nestjs",
    "nutui",
    "openapi",
    "OVERLIMIT",
    "pinia",
    "Runtimes",
    "Screenfull",
    "SDAM",
    "Signale",
    "Signin",
    "Singup",
    "splitpanes",
    "subdirs",
    "Switchy",
    "sysmenu",
    "sysrole",
    "Tailable",
    "tanstack",
    "tarojs",
    "telepresence",
    "unocss",
    "unplugin",
    "urlencode",
    "vxetable",
    "wechat",
    "windi",
    "YMDHMS",
    "zustand"
  ],
  "files.eol": "\n",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.useEditorConfig": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "extensions.ignoreRecommendations": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false
  },
  "files.associations": {
    "*.nvue": "vue"
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.rulers": [
    {
      "color": "#777272",
      "column": 120
    }
  ],
  "editor.wordWrapColumn": 150,
  "diffEditor.wordWrap": "off",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "accessibility.signals.terminalBell": {
    "sound": "on"
  },
  "terminal.integrated.enableVisualBell": true,
  "i18n-ally.localesPaths": [
    "src/uni_modules/wot-design-uni/locale",
    "src/uni_modules/wot-design-uni/locale/lang"
  ],
  "cSpell.words": [
    "swipeable"
  ]
}