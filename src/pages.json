{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/info",
      "style": {
        "navigationBarTitleText": "患者信息",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/idCard",
      "style": {
        "navigationBarTitleText": "身份证",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/selectDisease",
      "style": {
        "navigationBarTitleText": "选择疾病",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/updateBaseInfo",
      "style": {
        "navigationBarTitleText": "患者基本信息",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },
    {
      "path": "pages/patient/updateHistory",
      "style": {
        "navigationBarTitleText": "病史",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },
    {
      "path": "pages/patient/updateHb",
      "style": {
        "navigationBarTitleText": "合并症",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/updateFollow",
      "style": {
        "navigationBarTitleText": "访视信息修改",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },
    {
      "path": "pages/patient/baseInfo",
      "style": {
        "navigationBarTitleText": "患者注册",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/follow",
      "style": {
        "navigationBarTitleText": "访视信息修改",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/updateChecklist",
      "style": {
        "navigationBarTitleText": "检验单项目信息",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/components/echarts",
      "style": {
        "navigationBarTitleText": "echarts",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },

    {
      "path": "pages/patient/finish",
      "style": {
        "navigationBarTitleText": "随诊",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },
    {
      "path": "pages/disease/tak",
      "style": {
        "navigationBarTitleText": "大动脉炎",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },
    {
      "path": "pages/disease/spa",
      "style": {
        "navigationBarTitleText": "脊柱关节炎诊断",
        "navigationBarBackgroundColor": "#5ae8b1"
      }
    },
    {
      "path": "pages/401/401",
      "style": {
        "navigationBarTitleText": "无权访问"
      }
    }
  ],
  "tabBar": {
    "color": "#000000",
    "selectedColor": "#07c160",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabBar/patients.png",
        "selectedIconPath": "static/tabBar/patients-active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/my/index",
        "iconPath": "static/tabBar/my.png",
        "selectedIconPath": "static/tabBar/my-active.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "患者服务",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#F8F8F8"
    // "navigationStyle": "custom"
  }
}
